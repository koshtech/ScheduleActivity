<h1>Faça aqui a sua reserva de torta</h1>
<% if @activity.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(@activity.errors.count, "error") %>.
    </div>
    <ul>
    <% @activity.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
	<div class="span6 offset">
		<%= form_for(@activity) do |f| %>
			Sabor da torta: <br>
			<%= f.text_field :product %> <br>
			Data da entrega: <br>
			<%= f.text_field :date %> <br>
			Hora da entrega: <br>
			<%= f.text_field :time %> <br>
			Seu nome: <br>
			<%= f.text_field :clientName %> <br>
			Seu endereço <br>
			<%= f.text_field :clientAddress %> <br>
			Seu telefone de contato: <br>
			<%= f.text_field :clientTelephone %> <br>
			Seu email: <br>
			<%= f.text_field :clientEmail %> <br>

			<%= f.submit "Criar reserva",  class: "btn btn-large btn-primary" %> 
		<% end %>
	</div>
</div>